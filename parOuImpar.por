programa
{
    funcao inicio()
    {
        INTEIRO num, result,
        escreva("Entre com um numero, para saber se é par ou impar:")
        leia(num)
        result = num%2
        SE (result == 0)
        {
            escreava(num, " é par!")
        }
        SENAO
        {
            escreava(num, " é ímpar!")
        }

    }

}